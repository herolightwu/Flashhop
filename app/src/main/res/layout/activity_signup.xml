<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDGray"
    tools:context="com.flashhop.app.start.SignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_xmiddle"
        android:layout_marginTop="@dimen/spacing_xlarge">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/txt_xlarge"
            android:text="@string/app_name"/>

        <ImageView
            android:id="@+id/signup_iv_back"
            android:layout_width="@dimen/height_xsmall"
            android:layout_height="@dimen/height_xsmall"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            app:srcCompat="@drawable/ic_back"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_large">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle">
                <EditText
                    android:id="@+id/signup_et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGray_A"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:inputType="textNoSuggestions"
                    android:textSize="@dimen/txt_middle"
                    android:fontFamily="@font/sourcesanspro"
                    android:hint="@string/firstname"
                    android:backgroundTint="@color/colorWhite"/>
                <ImageView
                    android:id="@+id/signup_iv_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_clear_w"
                    android:tint="@color/colorYellow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle">
                <EditText
                    android:id="@+id/signup_et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGray_A"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:inputType="textNoSuggestions"
                    android:textSize="@dimen/txt_middle"
                    android:fontFamily="@font/sourcesanspro"
                    android:hint="@string/lastname"
                    android:backgroundTint="@color/colorWhite"/>
                <ImageView
                    android:id="@+id/signup_iv_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_clear_w"
                    android:tint="@color/colorYellow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle">
                <EditText
                    android:id="@+id/signup_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGray_A"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:inputType="textNoSuggestions|textEmailAddress"
                    android:textSize="@dimen/txt_middle"
                    android:fontFamily="@font/sourcesanspro"
                    android:hint="@string/email_addr"
                    android:backgroundTint="@color/colorWhite"/>
                <ImageView
                    android:id="@+id/signup_iv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_clear_w"
                    android:tint="@color/colorYellow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle">
                <EditText
                    android:id="@+id/signup_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGray_A"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_middle"
                    android:inputType="textPassword|textNoSuggestions"
                    android:fontFamily="@font/sourcesanspro"
                    android:hint="@string/password"
                    android:backgroundTint="@color/colorWhite"/>
                <ImageView
                    android:id="@+id/signup_iv_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_clear_w"
                    android:tint="@color/colorYellow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle">
                <EditText
                    android:id="@+id/signup_et_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGray_A"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_middle"
                    android:inputType="textPassword|textNoSuggestions"
                    android:fontFamily="@font/sourcesanspro"
                    android:hint="@string/confirm_password"
                    android:backgroundTint="@color/colorWhite"/>
                <ImageView
                    android:id="@+id/signup_iv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_clear_w"
                    android:tint="@color/colorYellow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large"/>

            <Button
                android:id="@+id/signup_btn_send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:layout_marginLeft="@dimen/spacing_xlarge"
                android:layout_marginRight="@dimen/spacing_xlarge"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:background="@drawable/border_round_yellow"
                android:textColor="@color/colorDGray"
                android:textAllCaps="false"
                android:fontFamily="@font/sourcesanspro_bold"
                android:textStyle="bold"
                android:textSize="@dimen/txt_xmiddle"
                android:text="@string/send_verify_code"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:layout_marginBottom="@dimen/spacing_xlarge"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/sourcesanspro"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt_xxsmall"
                android:text="@string/verification_desc"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>