<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:id="@+id/custom_join_rl_bg"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_xlarge"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDGray"
        android:orientation="horizontal">
        <Button
            android:id="@+id/custom_join_btn_not"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/colorYellow"
            android:textAllCaps="false"
            android:fontFamily="@font/sourcesanspro_bold"
            android:textSize="@dimen/txt_xmiddle"
            android:text="@string/btn_not_joinng"/>
        <Button
            android:id="@+id/custom_join_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/colorYellow"
            android:textAllCaps="false"
            android:fontFamily="@font/sourcesanspro_bold"
            android:textSize="@dimen/txt_xmiddle"
            android:text="@string/btn_cancel"/>
    </LinearLayout>
</RelativeLayout>