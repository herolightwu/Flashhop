<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-30dp"
        android:layout_marginTop="-30dp">
        <fragment
            android:id="@+id/hoppers_frag_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxlarge">
        <Button
            android:id="@+id/hoppers_frag_btn_group_chat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_middle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/spacing_xlarge"
            android:layout_marginLeft="@dimen/spacing_xlarge"
            android:background="@drawable/border_round_yellow"
            android:fontFamily="@font/sourcesanspro_bold"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large"
            android:textSize="@dimen/txt_xxsmall"
            android:textAllCaps="false"
            android:textColor="@color/colorDGray"
            android:text="@string/btn_group_chat"/>

        <ImageView
            android:id="@+id/hoppers_frag_iv_back"
            android:layout_width="@dimen/height_xsmall"
            android:layout_height="@dimen/height_xsmall"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_centerVertical="true"
            android:tint="@color/colorDGray"
            app:srcCompat="@drawable/ic_back"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/hoppers_frag_my_location"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_mlarge"
        android:layout_marginBottom="@dimen/spacing_xlarge"
        app:cardBackgroundColor="@color/colorGray_F"
        app:cardCornerRadius="23dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/hoppers_frag_iv_myloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_middle"
            android:src="@drawable/ic_gps"
            android:tint="@color/colorGray"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>