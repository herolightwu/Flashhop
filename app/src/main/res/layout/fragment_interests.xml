<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xmiddle"
            android:layout_marginTop="@dimen/spacing_xlarge">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/txt_xlarge"
                android:text="@string/app_name"/>

            <ImageView
                android:id="@+id/inter_frag_iv_skip"
                android:layout_width="@dimen/height_xxsmall"
                android:layout_height="@dimen/height_xxsmall"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                app:srcCompat="@drawable/ic_forward"/>
            <ImageView
                android:id="@+id/inter_frag_iv_back"
                android:layout_width="@dimen/height_xsmall"
                android:layout_height="@dimen/height_xsmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                app:srcCompat="@drawable/ic_back"/>

        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:scrollingCache="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/inter_frag_tv_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_middle"
                    android:text="@string/welcome_step"/>

                <TextView
                    android:id="@+id/inter_frag_tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_xlarge"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/txt_middle"
                    android:text="@string/welcome_inter_choose"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_xlarge"
                    android:layout_marginRight="@dimen/spacing_xlarge"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/inter_frag_ll_party"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/inter_frag_iv_party"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_middle"
                            android:src="@drawable/party_w"/>
                        <TextView
                            android:id="@+id/inter_frag_tv_party"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/txt_xxsmall"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/interest_party"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inter_frag_ll_eating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/inter_frag_iv_eating"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_middle"
                            android:src="@drawable/eating_w"/>
                        <TextView
                            android:id="@+id/inter_frag_tv_eating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/txt_xxsmall"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/interest_eating"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inter_frag_ll_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/inter_frag_iv_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_middle"
                            android:src="@drawable/dating_w"/>
                        <TextView
                            android:id="@+id/inter_frag_tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/txt_xxsmall"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/interest_dating"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_middle"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_xlarge"
                    android:layout_marginRight="@dimen/spacing_xlarge"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/inter_frag_ll_sport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/inter_frag_iv_sport"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_middle"
                            android:src="@drawable/sports_w"/>
                        <TextView
                            android:id="@+id/inter_frag_tv_sport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/txt_xxsmall"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/interest_sports"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inter_frag_ll_outdoor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/inter_frag_iv_outdoor"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_middle"
                            android:src="@drawable/outdoor_w"/>
                        <TextView
                            android:id="@+id/inter_frag_tv_outdoor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/txt_xxsmall"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/interest_outdoors"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inter_frag_ll_game"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/inter_frag_iv_game"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_middle"
                            android:src="@drawable/games_w"/>
                        <TextView
                            android:id="@+id/inter_frag_tv_game"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/txt_xxsmall"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/interest_games"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_xlarge"
                    android:layout_marginRight="@dimen/spacing_xlarge"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/inter_frag_ll_culture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/inter_frag_iv_culture"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_middle"
                            android:src="@drawable/culture_w"/>
                        <TextView
                            android:id="@+id/inter_frag_tv_culture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/txt_xxsmall"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/interest_culture"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inter_frag_ll_spirit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/inter_frag_iv_spirit"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_middle"
                            android:src="@drawable/spirits_w"/>
                        <TextView
                            android:id="@+id/inter_frag_tv_spirit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/txt_xxsmall"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/interest_spirits"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inter_frag_ll_art"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/inter_frag_iv_art"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_middle"
                            android:src="@drawable/arts_w"/>
                        <TextView
                            android:id="@+id/inter_frag_tv_art"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/txt_xxsmall"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/interest_arts"/>
                    </LinearLayout>


                </LinearLayout>

                <CheckBox
                    android:id="@+id/inter_frag_cb_all"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_small"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:layout_marginBottom="@dimen/spacing_xxlarge"
                    android:fontFamily="@font/sourcesanspro"
                    app:buttonTint="@color/colorWhite"
                    android:text="@string/btn_select_all"
                    android:textSize="@dimen/txt_xxsmall"
                    android:textColor="@color/colorWhite"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_middle"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:gravity="center_horizontal"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/inter_frag_btn_done"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/height_middle"
                        android:layout_marginBottom="@dimen/spacing_middle"
                        android:background="@drawable/border_round_yellow"
                        android:textColor="@color/colorDGray"
                        android:textAllCaps="false"
                        android:fontFamily="@font/sourcesanspro_bold"
                        android:textSize="@dimen/txt_xmiddle"
                        android:text="@string/btn_next"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>