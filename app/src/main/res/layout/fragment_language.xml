<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xmiddle"
            android:layout_marginTop="@dimen/spacing_xlarge">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/txt_xlarge"
                android:text="@string/app_name"/>

            <ImageView
                android:id="@+id/lang_iv_skip"
                android:layout_width="@dimen/height_xxsmall"
                android:layout_height="@dimen/height_xxsmall"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                app:srcCompat="@drawable/ic_forward"/>
            <ImageView
                android:id="@+id/lang_iv_back"
                android:layout_width="@dimen/height_xsmall"
                android:layout_height="@dimen/height_xsmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                app:srcCompat="@drawable/ic_back"/>

        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:scrollingCache="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/language_tv_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_middle"
                    android:text="@string/welcome_step"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/txt_middle"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:text="@string/welcome_pick"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/lang_btn_en"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_white"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorDGray"
                            android:text="@string/lang_en"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/lang_btn_fr"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_dark"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorWhite"
                            android:text="@string/lang_fr"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/lang_btn_cn"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_dark"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorWhite"
                            android:text="@string/lang_cn"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/lang_btn_es"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_dark"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorWhite"
                            android:text="@string/lang_es"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/lang_btn_ja"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_dark"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorWhite"
                            android:text="@string/lang_ja"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/lang_btn_ko"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_dark"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorWhite"
                            android:text="@string/lang_ko"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_large">
                        <Button
                            android:id="@+id/lang_btn_ar"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_dark"
                            android:paddingLeft="@dimen/spacing_xlarge"
                            android:paddingRight="@dimen/spacing_xlarge"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorWhite"
                            android:text="@string/lang_ar"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_large">
                        <Button
                            android:id="@+id/lang_btn_ru"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_dark"
                            android:paddingLeft="@dimen/spacing_xlarge"
                            android:paddingRight="@dimen/spacing_xlarge"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorWhite"
                            android:text="@string/lang_ru"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_large">
                        <Button
                            android:id="@+id/lang_btn_de"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_dark"
                            android:paddingLeft="@dimen/spacing_xlarge"
                            android:paddingRight="@dimen/spacing_xlarge"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorWhite"
                            android:text="@string/lang_de"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_large">
                        <Button
                            android:id="@+id/lang_btn_pt"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_middle"
                            android:background="@drawable/border_btn_dark"
                            android:paddingLeft="@dimen/spacing_xlarge"
                            android:paddingRight="@dimen/spacing_xlarge"
                            android:textAllCaps="false"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/txt_xxsmall"
                            android:textColor="@color/colorWhite"
                            android:text="@string/lang_pt"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/language_tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:layout_marginBottom="@dimen/spacing_xlarge"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/welcome_lang_desc"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:layout_marginBottom="@dimen/spacing_xlarge"
                    android:gravity="center_horizontal"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/lang_btn_next"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/height_middle"
                        android:background="@drawable/border_round_yellow"
                        android:textColor="@color/colorDGray"
                        android:textAllCaps="false"
                        android:fontFamily="@font/sourcesanspro_bold"
                        android:textSize="@dimen/txt_xmiddle"
                        android:text="@string/btn_next"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>