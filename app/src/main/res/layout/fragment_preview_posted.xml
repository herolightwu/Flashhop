<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDGray">

    <RelativeLayout
        android:id="@+id/preview_posted_frag_ll_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_xmiddle"
        android:layout_marginTop="@dimen/spacing_xlarge">

        <ImageView
            android:id="@+id/preview_posted_frag_iv_back"
            android:layout_width="@dimen/height_xsmall"
            android:layout_height="@dimen/height_xsmall"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            app:srcCompat="@drawable/ic_back"/>

        <TextView
            android:id="@+id/preview_posted_frag_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/preview_posted_frag_iv_back"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:gravity="center"
            android:fontFamily="@font/sourcesanspro_bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_large"
            android:text="@string/app_name"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/preview_posted_frag_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/preview_posted_frag_iv_share"
            android:layout_width="@dimen/height_xxsmall"
            android:layout_height="@dimen/height_xxsmall"
            android:padding="@dimen/spacing_min"
            android:src="@drawable/ic_share"
            android:tint="@color/colorWhite"
            android:layout_margin="@dimen/spacing_large"/>

        <ImageView
            android:id="@+id/preview_posted_frag_iv_down"
            android:layout_width="@dimen/height_xxsmall"
            android:layout_height="@dimen/height_xxsmall"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_file_download"
            android:tint="@color/colorWhite"
            android:layout_margin="@dimen/spacing_large"/>
    </RelativeLayout>


</RelativeLayout>