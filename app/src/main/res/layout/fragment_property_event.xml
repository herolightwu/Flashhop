<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorWhite"
    android:id="@+id/event_prop_frag_frame"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollingCache="true"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/event_prop_frag_ll_outside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:minHeight="32dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp">
                            <ImageView
                                android:id="@+id/event_prop_frag_iv_photo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/sample_party"
                                android:scaleType="centerCrop"/>

                            <ImageView
                                android:id="@+id/event_prop_frag_iv_back"
                                android:layout_width="@dimen/height_xsmall"
                                android:layout_height="@dimen/height_xsmall"
                                android:layout_marginTop="@dimen/spacing_xlarge"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:tint="@color/colorWhite"
                                app:srcCompat="@drawable/ic_back"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spacing_middle"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true">
                                <Button
                                    android:id="@+id/event_prop_frag_btn_invite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/height_middle"
                                    android:layout_margin="@dimen/spacing_middle"
                                    android:background="@drawable/border_round_yellow"
                                    android:paddingLeft="@dimen/spacing_middle"
                                    android:paddingRight="@dimen/spacing_middle"
                                    android:textColor="@color/colorDGray"
                                    android:textAllCaps="false"
                                    android:fontFamily="@font/sourcesanspro_bold"
                                    android:textSize="@dimen/txt_xmiddle"
                                    android:text="@string/btn_invite"/>

                                <Button
                                    android:id="@+id/event_prop_frag_btn_edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/height_middle"
                                    android:layout_margin="@dimen/spacing_middle"
                                    android:background="@drawable/border_round_dark"
                                    android:paddingLeft="@dimen/spacing_middle"
                                    android:paddingRight="@dimen/spacing_middle"
                                    android:textColor="@color/colorYellow"
                                    android:textAllCaps="false"
                                    android:fontFamily="@font/sourcesanspro_bold"
                                    android:textSize="@dimen/txt_xmiddle"
                                    android:text="@string/btn_joining"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/event_prop_frag_ll_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_middle"
                            android:layout_gravity="center_horizontal">
                            <Button
                                android:id="@+id/event_prop_frag_btn_groupchat"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/height_middle"
                                android:layout_margin="@dimen/spacing_middle"
                                android:background="@drawable/border_round_yellow"
                                android:paddingLeft="@dimen/spacing_large"
                                android:paddingRight="@dimen/spacing_large"
                                android:textColor="@color/colorDGray"
                                android:textAllCaps="false"
                                android:fontFamily="@font/sourcesanspro_bold"
                                android:textSize="@dimen/txt_middle"
                                android:text="@string/btn_group_chat"/>

                            <Button
                                android:id="@+id/event_prop_frag_btn_where"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/height_middle"
                                android:layout_margin="@dimen/spacing_middle"
                                android:background="@drawable/border_round_yellow"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:textColor="@color/colorDGray"
                                android:textAllCaps="false"
                                android:fontFamily="@font/sourcesanspro_bold"
                                android:textSize="@dimen/txt_middle"
                                android:text="@string/btn_where_hoppers"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_middle"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/event_prop_frag_ll_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_b_back_w"
                                android:padding="@dimen/spacing_small"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/event_prop_frag_tv_month"
                                    android:layout_width="32dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:fontFamily="@font/sourcesanspro"
                                    android:textSize="@dimen/txt_xxsmall"
                                    android:textColor="@color/colorDGray"
                                    android:text="Aug"/>

                                <TextView
                                    android:id="@+id/event_prop_frag_tv_day"
                                    android:layout_width="32dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:fontFamily="@font/sourcesanspro_bold"
                                    android:textSize="@dimen/txt_xlarge"
                                    android:textColor="@color/colorDGray"
                                    android:text="3"/>
                                <View
                                    android:id="@+id/event_prop_frag_line"
                                    android:layout_width="32dp"
                                    android:layout_height="1dp"
                                    android:background="@color/colorDGray"/>
                                <TextView
                                    android:id="@+id/event_prop_frag_tv_weekday"
                                    android:layout_width="32dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="@dimen/txt_xxsmall"
                                    android:fontFamily="@font/sourcesanspro"
                                    android:textColor="@color/colorDGray"
                                    android:text="Fri"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/event_prop_frag_ll_icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:orientation="vertical">
                                        <ImageView
                                            android:id="@+id/event_prop_frag_iv_like"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_like"/>
                                        <ImageView
                                            android:id="@+id/event_prop_frag_iv_share"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/spacing_large"
                                            android:src="@drawable/ic_share"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/spacing_large"
                                        android:layout_marginRight="@dimen/spacing_large"
                                        android:layout_toLeftOf="@+id/event_prop_frag_ll_icon"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/event_prop_frag_tv_title"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/sourcesanspro_bold"
                                            android:textSize="@dimen/txt_xmiddle"
                                            android:textColor="@color/colorDGray"
                                            android:text="Lorem ipsum dolor sit amet, consect etur adipiscing elit. "/>

                                        <TextView
                                            android:id="@+id/event_prop_frag_tv_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/spacing_middle"
                                            android:fontFamily="@font/sourcesanspro_bold"
                                            android:textSize="@dimen/txt_xxsmall"
                                            android:textColor="@color/colorRed"
                                            android:text="10:30 am - 12:00 pm"/>

                                    </LinearLayout>
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_large"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/event_prop_frag_tv_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/colorGray_F"
                                        android:fontFamily="@font/sourcesanspro"
                                        android:textSize="@dimen/txt_xxsmall"
                                        android:textColor="@color/colorDGray"
                                        android:text="299 Queen St W, Toronto, ON M5V 2Z5"/>

                                    <TextView
                                        android:id="@+id/event_prop_frag_tv_status"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/spacing_middle"
                                        android:fontFamily="@font/sourcesanspro"
                                        android:textSize="@dimen/txt_xxsmall"
                                        android:textColor="@color/colorDGray"
                                        android:text="Min 10, Max 20  6 are going, 2 friends"/>

                                    <RelativeLayout
                                        android:id="@+id/event_prop_frag_rl_avatars"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/spacing_middle">

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/event_prop_frag_civ_avatar0"
                                            android:layout_width="38dp"
                                            android:layout_height="38dp"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/ic_annotation"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone"
                                            android:background="@color/colorWhite"
                                            app:civ_border_color="@color/colorWhite"
                                            app:civ_border_width="1dp"/>

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/event_prop_frag_civ_avatar1"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="20dp"
                                            android:src="@drawable/sample_avatar1"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone"
                                            app:civ_border_color="@color/colorWhite"
                                            app:civ_border_width="1dp"/>

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/event_prop_frag_civ_avatar2"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="37dp"
                                            android:src="@drawable/sample_avatar2"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone"
                                            app:civ_border_color="@color/colorWhite"
                                            app:civ_border_width="1dp"/>

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/event_prop_frag_civ_avatar3"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="54dp"
                                            android:src="@drawable/sample_avatar3"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone"
                                            app:civ_border_color="@color/colorWhite"
                                            app:civ_border_width="1dp"/>

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/event_prop_frag_civ_avatar4"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="71dp"
                                            android:src="@drawable/sample_avatar2"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone"
                                            app:civ_border_color="@color/colorWhite"
                                            app:civ_border_width="1dp"/>

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/event_prop_frag_civ_avatar5"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="88dp"
                                            android:src="@drawable/sample_avatar3"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone"
                                            app:civ_border_color="@color/colorWhite"
                                            app:civ_border_width="1dp"/>

                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/event_prop_frag_tv_description"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sourcesanspro"
                                        android:textSize="@dimen/txt_xxsmall"
                                        android:textColor="@color/colorGray"
                                        android:text="Lorem ipsum dolor sit $20 consectetur adipiscing elit. Duis pellentesque placerat ornare. Etiam maximus nulla sed rutrum commodo. Vivamus faucibus diam tortor, eget aliquet erat venenatis et. Pellentesque habitant morbi tristique senectus et netus et sefmt kofaring malesuada."/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/event_prop_frag_tv_guide_join"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/spacing_large"
                        android:layout_marginTop="184dp"
                        android:visibility="gone"
                        android:gravity="center"
                        android:background="@drawable/border_round_guide"
                        android:padding="@dimen/spacing_middle"
                        android:fontFamily="@font/sourcesanspro"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/txt_xxsmall"
                        android:text="@string/event_guide_full"/>

                    <TextView
                        android:id="@+id/event_prop_frag_tv_guide_where"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/spacing_xlarge"
                        android:layout_marginTop="258dp"
                        android:visibility="gone"
                        android:gravity="center"
                        android:background="@drawable/border_round_guide"
                        android:padding="@dimen/spacing_middle"
                        android:fontFamily="@font/sourcesanspro"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/txt_xxsmall"
                        android:text="@string/event_guide_where"/>
                </RelativeLayout>
            <!--</android.support.v7.widget.CardView>-->
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>