<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingChangeEmail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xmiddle"
            android:layout_marginTop="@dimen/spacing_xlarge">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/colorDGray"
                android:fontFamily="@font/sourcesanspro_bold"
                android:textSize="@dimen/txt_xxmiddle"
                android:text="@string/setting_change_email"/>

            <ImageView
                android:id="@+id/setting_change_email_iv_back"
                android:layout_width="@dimen/height_xsmall"
                android:layout_height="@dimen/height_xsmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                android:tint="@color/colorBlack"
                app:srcCompat="@drawable/ic_back"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_large"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/setting_change_email_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorDGray"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/email_addr"/>
                <EditText
                    android:id="@+id/setting_change_email_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_middle"
                    android:background="@drawable/border_edit_small_round"
                    android:fontFamily="@font/sourcesanspro"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/txt_xxsmall"
                    android:textColor="@color/colorDGray"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:hint="SampleEmail@gmail.com"/>
            </LinearLayout>

            <Button
                android:id="@+id/setting_change_email_btn_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_middle"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large"
                android:background="@drawable/border_round_yellow"
                android:textColor="@color/colorDGray"
                android:fontFamily="@font/sourcesanspro_bold"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="@dimen/txt_xxsmall"
                android:text="@string/send_verify_code"/>

            <LinearLayout
                android:id="@+id/setting_change_email_ll_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/setting_change_email_tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorDGray"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/verification_code"/>
                <EditText
                    android:id="@+id/setting_change_email_et_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_middle"
                    android:background="@drawable/border_edit_small_round"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/sourcesanspro"
                    android:textSize="@dimen/txt_xxsmall"
                    android:textColor="@color/colorDGray"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:hint="xxxxxx"/>

                <Button
                    android:id="@+id/setting_change_email_btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:background="@drawable/border_round_yellow"
                    android:textColor="@color/colorDGray"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/btn_save"/>
            </LinearLayout>

            <TextView
                android:id="@+id/setting_change_email_tv_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/sourcesanspro"
                android:textSize="@dimen/txt_xsmall"
                android:textColor="@color/colorRed"
                android:text="@string/setting_change_email_success"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>