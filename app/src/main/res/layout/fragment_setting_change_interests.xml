<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingChangeInterests">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xmiddle"
            android:layout_marginTop="@dimen/spacing_xlarge">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/colorDGray"
                android:fontFamily="@font/sourcesanspro_bold"
                android:textSize="@dimen/txt_xxmiddle"
                android:text="@string/setting_change_interests"/>

            <ImageView
                android:id="@+id/setting_change_interest_iv_back"
                android:layout_width="@dimen/height_xsmall"
                android:layout_height="@dimen/height_xsmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                android:tint="@color/colorBlack"
                app:srcCompat="@drawable/ic_back"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_large"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_marginLeft="@dimen/spacing_xlarge"
                android:layout_marginRight="@dimen/spacing_xlarge"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:id="@+id/setting_change_interest_ll_party"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/setting_change_interest_iv_party"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_middle"
                        android:tint="@color/colorDGray"
                        android:src="@drawable/party_w"/>
                    <TextView
                        android:id="@+id/setting_change_interest_tv_party"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/txt_xxsmall"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/interest_party"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_change_interest_ll_eating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/setting_change_interest_iv_eating"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_middle"
                        android:tint="@color/colorDGray"
                        android:src="@drawable/eating_d"/>
                    <TextView
                        android:id="@+id/setting_change_interest_tv_eating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/txt_xxsmall"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/interest_eating"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_change_interest_ll_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/setting_change_interest_iv_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_middle"
                        android:tint="@color/colorDGray"
                        android:src="@drawable/dating_d"/>
                    <TextView
                        android:id="@+id/setting_change_interest_tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/txt_xxsmall"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/interest_dating"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_marginLeft="@dimen/spacing_xlarge"
                android:layout_marginRight="@dimen/spacing_xlarge"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:id="@+id/setting_change_interest_ll_sport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/setting_change_interest_iv_sport"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_middle"
                        android:tint="@color/colorDGray"
                        android:src="@drawable/sports_d"/>
                    <TextView
                        android:id="@+id/setting_change_interest_tv_sport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/txt_xxsmall"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/interest_sports"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_change_interest_ll_outdoor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/setting_change_interest_iv_outdoor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_middle"
                        android:tint="@color/colorDGray"
                        android:src="@drawable/outdoor_d"/>
                    <TextView
                        android:id="@+id/setting_change_interest_tv_outdoor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/txt_xxsmall"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/interest_outdoors"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_change_interest_ll_game"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/setting_change_interest_iv_game"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_middle"
                        android:tint="@color/colorDGray"
                        android:src="@drawable/games_d"/>
                    <TextView
                        android:id="@+id/setting_change_interest_tv_game"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/txt_xxsmall"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/interest_games"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_marginLeft="@dimen/spacing_xlarge"
                android:layout_marginRight="@dimen/spacing_xlarge"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/setting_change_interest_ll_culture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/setting_change_interest_iv_culture"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_middle"
                        android:tint="@color/colorDGray"
                        android:src="@drawable/culture_w"/>
                    <TextView
                        android:id="@+id/setting_change_interest_tv_culture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/txt_xxsmall"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/interest_culture"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_change_interest_ll_spirit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/setting_change_interest_iv_spirit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_middle"
                        android:tint="@color/colorDGray"
                        android:src="@drawable/spirits_w"/>
                    <TextView
                        android:id="@+id/setting_change_interest_tv_spirit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/txt_xxsmall"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/interest_spirits"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_change_interest_ll_art"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/setting_change_interest_iv_art"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_middle"
                        android:tint="@color/colorDGray"
                        android:src="@drawable/arts_w"/>
                    <TextView
                        android:id="@+id/setting_change_interest_tv_art"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/txt_xxsmall"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/interest_arts"/>
                </LinearLayout>


            </LinearLayout>

            <CheckBox
                android:id="@+id/setting_change_interest_cb_all"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_small"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_xlarge"
                android:fontFamily="@font/sourcesanspro"
                app:buttonTint="@color/colorDGray"
                android:text="@string/btn_select_all"
                android:textSize="@dimen/txt_xxsmall"
                android:textColor="@color/colorDGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:gravity="center_horizontal"
                android:weightSum="3"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/setting_change_interest_btn_save"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/height_middle"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:background="@drawable/border_round_yellow"
                    android:textColor="@color/colorDGray"
                    android:textAllCaps="false"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:textSize="@dimen/txt_xmiddle"
                    android:text="@string/btn_save"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>