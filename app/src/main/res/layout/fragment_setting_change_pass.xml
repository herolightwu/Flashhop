<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingChangePass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xmiddle"
            android:layout_marginTop="@dimen/spacing_xlarge">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/colorDGray"
                android:fontFamily="@font/sourcesanspro_bold"
                android:textSize="@dimen/txt_xxmiddle"
                android:text="@string/setting_change_password"/>

            <ImageView
                android:id="@+id/setting_change_pass_iv_back"
                android:layout_width="@dimen/height_xsmall"
                android:layout_height="@dimen/height_xsmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                android:tint="@color/colorBlack"
                app:srcCompat="@drawable/ic_back"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_large"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/setting_change_pass_tv_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorDGray"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/password"/>
                <EditText
                    android:id="@+id/setting_change_pass_et_cur_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_middle"
                    android:background="@drawable/border_edit_small_round"
                    android:fontFamily="@font/sourcesanspro"
                    android:inputType="textPassword"
                    android:textSize="@dimen/txt_xxsmall"
                    android:textColor="@color/colorDGray"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:hint="Current password"/>

                <EditText
                    android:id="@+id/setting_change_pass_et_new_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_middle"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:background="@drawable/border_edit_small_round"
                    android:fontFamily="@font/sourcesanspro"
                    android:inputType="textPassword"
                    android:textSize="@dimen/txt_xxsmall"
                    android:textColor="@color/colorDGray"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:hint="@string/new_password"/>

                <EditText
                    android:id="@+id/setting_change_pass_et_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_middle"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:background="@drawable/border_edit_small_round"
                    android:fontFamily="@font/sourcesanspro"
                    android:inputType="textPassword"
                    android:textSize="@dimen/txt_xxsmall"
                    android:textColor="@color/colorDGray"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:hint="@string/confirm_password"/>
            </LinearLayout>

            <Button
                android:id="@+id/setting_change_pass_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_middle"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large"
                android:background="@drawable/border_round_yellow"
                android:textColor="@color/colorDGray"
                android:fontFamily="@font/sourcesanspro_bold"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="@dimen/txt_xxsmall"
                android:text="@string/btn_save"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>