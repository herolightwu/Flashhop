<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xmiddle"
            android:layout_marginTop="@dimen/spacing_xlarge">

            <TextView
                android:id="@+id/setting_frag_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/colorDGray"
                android:fontFamily="@font/sourcesanspro_bold"
                android:textSize="@dimen/txt_xxmiddle"
                android:text="@string/setting_title"/>

            <ImageView
                android:id="@+id/setting_frag_iv_back"
                android:layout_width="@dimen/height_xsmall"
                android:layout_height="@dimen/height_xsmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_middle"
                android:layout_marginRight="@dimen/spacing_middle"
                android:tint="@color/colorBlack"
                app:srcCompat="@drawable/ic_back"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_large"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/setting_frag_ll_accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorDGray"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/setting_account"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray_F"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_frag_ll_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorDGray"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/setting_notifiacations"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray_F"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_frag_ll_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorDGray"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/setting_payment_method"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray_F"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_frag_ll_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorDGray"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/setting_privacy_terms"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray_F"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_frag_ll_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorDGray"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/setting_logout"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray_F"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_frag_ll_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/setting_frag_tv_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_middle"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro"
                    android:textColor="@color/colorDGray"
                    android:textSize="@dimen/txt_xxsmall"
                    android:text="@string/setting_inactivate"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray_F"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>