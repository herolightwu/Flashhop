<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/group_list_item_ll_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_middle"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/group_list_item_rl_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/group_list_item_civ_avatar0"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_annotation"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="1dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/group_list_item_civ_avatar1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:src="@drawable/sample_avatar1"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="1dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/group_list_item_civ_avatar2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="28dp"
                    android:src="@drawable/sample_avatar2"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="1dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/group_list_item_civ_avatar3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/sample_avatar3"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="1dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/group_list_item_tv_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_middle"
                android:fontFamily="@font/sourcesanspro"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/txt_xsmall"
                android:text="7 days left"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/group_list_item_rl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_middle"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_min"
                android:background="@drawable/border_b_back_w"
                android:padding="@dimen/spacing_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/group_list_item_tv_date"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/sourcesanspro"
                    android:textSize="@dimen/txt_xxsmall"
                    android:textColor="@color/colorDGray"
                    android:text="Aug\n3"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:background="@color/colorDGray"/>
                <TextView
                    android:id="@+id/group_list_item_tv_weekday"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro"
                    android:gravity="center"
                    android:textSize="@dimen/txt_xxsmall"
                    android:textColor="@color/colorDGray"
                    android:text="Sat"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/group_list_item_iv_badge"
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="@dimen/spacing_middle"
                android:background="@drawable/border_round_red"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/group_list_item_ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/group_list_item_ll_avatar"
            android:layout_toLeftOf="@+id/group_list_item_rl_date"
            android:layout_margin="@dimen/spacing_middle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group_list_item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_bold"
                android:textColor="@color/colorDGray"
                android:textStyle="bold"
                android:textSize="@dimen/txt_xxsmall"
                android:text="Lorem ipsum dolor sit amet, consect etur adipiscing elit."/>

            <TextView
                android:id="@+id/group_list_item_tv_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:fontFamily="@font/sourcesanspro"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/txt_xxsmall"
                android:text="星仔： 活动很赞，下次再约哦"/>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:background="@color/colorGray"/>

</LinearLayout>