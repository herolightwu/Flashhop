        android:background="@drawable/border_circle_red"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:padding="2dp"/>
</FrameLayout>