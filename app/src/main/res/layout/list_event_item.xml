<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/spacing_middle">

    <LinearLayout
        android:id="@+id/list_event_item_ll_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_b_back_w"
        android:padding="@dimen/spacing_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_event_item_tv_month"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/sourcesanspro"
            android:textSize="@dimen/txt_xxsmall"
            android:textColor="@color/colorDGray"
            android:text="Aug"/>

        <TextView
            android:id="@+id/list_event_item_tv_day"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:textSize="@dimen/txt_xlarge"
            android:textColor="@color/colorDGray"
            android:text="3"/>
        <View
            android:id="@+id/list_event_item_line"
            android:layout_width="32dp"
            android:layout_height="1dp"
            android:background="@color/colorDGray"/>
        <TextView
            android:id="@+id/list_event_item_tv_weekday"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/txt_xxsmall"
            android:fontFamily="@font/sourcesanspro"
            android:textColor="@color/colorDGray"
            android:text="Fri"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/list_event_item_card"
        android:layout_width="@dimen/height_xmiddle"
        android:layout_height="@dimen/height_xmiddle"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_margin="@dimen/spacing_middle"
        app:cardCornerRadius="8dp"
        app:elevation="0dp">

        <ImageView
            android:id="@+id/list_event_item_iv_image"
            android:layout_width="@dimen/height_xmiddle"
            android:layout_height="@dimen/height_xmiddle"
            android:src="@drawable/sample_invite"
            android:background="@color/colorWhite"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>

    <!--<com.joooonho.SelectableRoundedImageView
        android:id="@+id/list_event_item_iv_image"
        android:layout_width="@dimen/height_xmiddle"
        android:layout_height="@dimen/height_xmiddle"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/spacing_middle"
        android:src="@drawable/sample_invite"
        android:background="@color/colorWhite"
        android:scaleType="centerCrop"
        app:sriv_left_top_corner_radius="8dip"
        app:sriv_right_top_corner_radius="8dip"
        app:sriv_left_bottom_corner_radius="8dip"
        app:sriv_right_bottom_corner_radius="8dip"
        app:sriv_border_width="0dip"
        app:sriv_border_color="@color/colorWhite"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_event_item_card"
        android:layout_toRightOf="@+id/list_event_item_ll_date"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginBottom="@dimen/spacing_large"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_event_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:textSize="@dimen/txt_middle"
            android:textColor="@color/colorDGray"
            android:text="Lorem ipsum dolor sit amet, consect etur adipiscing elit. "/>

        <TextView
            android:id="@+id/list_event_item_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:fontFamily="@font/sourcesanspro_bold"
            android:textSize="@dimen/txt_xxsmall"
            android:textColor="@color/colorRed"
            android:text="10:30 am - 12:00 pm"/>

        <TextView
            android:id="@+id/list_event_item_tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:background="@color/colorGray_F"
            android:fontFamily="@font/sourcesanspro"
            android:textSize="@dimen/txt_xxsmall"
            android:textColor="@color/colorDGray"
            android:text="299 Queen St W, Toronto, ON MSV 2Z5"/>
    </LinearLayout>

</RelativeLayout>