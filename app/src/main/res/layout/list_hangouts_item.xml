<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_middle">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hangouts_item_civ_avatar"
            android:layout_width="@dimen/height_middle"
            android:layout_height="@dimen/height_middle"
            android:src="@drawable/sample_invite"
            app:civ_border_width="0dp"/>

        <TextView
            android:id="@+id/hangouts_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hangouts_item_civ_avatar"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:fontFamily="@font/sourcesanspro_bold"
            android:textColor="@color/colorDGray"
            android:textSize="@dimen/txt_xxsmall"
            android:text="Oreo"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/hangouts_item_ll_thunder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/hangouts_item_iv_8"
                    android:layout_width="@dimen/height_xxsmall"
                    android:layout_height="@dimen/height_xxsmall"
                    android:src="@drawable/ic_thunder"/>
                <ImageView
                    android:id="@+id/hangouts_item_iv_7"
                    android:layout_width="@dimen/height_xxsmall"
                    android:layout_height="@dimen/height_xxsmall"
                    android:src="@drawable/ic_thunder"/>
                <ImageView
                    android:id="@+id/hangouts_item_iv_6"
                    android:layout_width="@dimen/height_xxsmall"
                    android:layout_height="@dimen/height_xxsmall"
                    android:src="@drawable/ic_thunder"/>
                <ImageView
                    android:id="@+id/hangouts_item_iv_5"
                    android:layout_width="@dimen/height_xxsmall"
                    android:layout_height="@dimen/height_xxsmall"
                    android:src="@drawable/ic_thunder"/>

                <ImageView
                    android:id="@+id/hangouts_item_iv_4"
                    android:layout_width="@dimen/height_xxsmall"
                    android:layout_height="@dimen/height_xxsmall"
                    android:src="@drawable/ic_thunder"/>
                <ImageView
                    android:id="@+id/hangouts_item_iv_3"
                    android:layout_width="@dimen/height_xxsmall"
                    android:layout_height="@dimen/height_xxsmall"
                    android:src="@drawable/ic_thunder"/>
                <ImageView
                    android:id="@+id/hangouts_item_iv_2"
                    android:layout_width="@dimen/height_xxsmall"
                    android:layout_height="@dimen/height_xxsmall"
                    android:src="@drawable/ic_thunder"/>
                <ImageView
                    android:id="@+id/hangouts_item_iv_1"
                    android:layout_width="@dimen/height_xxsmall"
                    android:layout_height="@dimen/height_xxsmall"
                    android:src="@drawable/ic_thunder"/>
                <ImageView
                    android:id="@+id/hangouts_item_iv_0"
                    android:layout_width="@dimen/height_xxsmall"
                    android:layout_height="@dimen/height_xxsmall"
                    android:src="@drawable/ic_thunder_3"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>