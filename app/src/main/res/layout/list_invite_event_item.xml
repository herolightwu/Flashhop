<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_invite_event_item_rl_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/spacing_middle">

    <LinearLayout
        android:id="@+id/list_invite_event_item_ll_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_b_back_w"
        android:padding="@dimen/spacing_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_invite_event_item_tv_month"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/sourcesanspro"
            android:textSize="@dimen/txt_xxsmall"
            android:textColor="@color/colorDGray"
            android:text="Aug"/>

        <TextView
            android:id="@+id/list_invite_event_item_tv_day"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:textSize="@dimen/txt_large"
            android:textColor="@color/colorDGray"
            android:text="3"/>
        <View
            android:id="@+id/list_invite_event_item_line"
            android:layout_width="32dp"
            android:layout_height="1dp"
            android:background="@color/colorDGray"/>
        <TextView
            android:id="@+id/list_invite_event_item_tv_weekday"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/txt_xxsmall"
            android:fontFamily="@font/sourcesanspro"
            android:textColor="@color/colorDGray"
            android:text="Fri"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/list_invite_event_item_card"
        android:layout_width="@dimen/height_xmiddle"
        android:layout_height="@dimen/height_xmiddle"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/spacing_middle"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/list_invite_event_item_iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sample_invite"
            android:scaleType="centerCrop"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/list_invite_event_item_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_invite_event_item_card"
        android:layout_toRightOf="@+id/list_invite_event_item_ll_date"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:textSize="@dimen/txt_xmiddle"
        android:textColor="@color/colorDGray"
        android:text="Lorem ipsum dolor sit amet, consect etur adipiscing elit. "/>

</RelativeLayout>