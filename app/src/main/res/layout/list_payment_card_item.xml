<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/payment_card_item_tv_cardnum"
        android:layout_width="150dp"
        android:layout_height="@dimen/height_middle"
        android:gravity="center_vertical"
        android:fontFamily="@font/sourcesanspro"
        android:textColor="@color/colorDGray"
        android:textSize="@dimen/txt_middle"/>
    <TextView
        android:id="@+id/payment_card_item_tv_expiration"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_middle"
        android:layout_toRightOf="@+id/payment_card_item_tv_cardnum"
        android:layout_marginLeft="@dimen/spacing_large"
        android:gravity="center_vertical"
        android:fontFamily="@font/sourcesanspro"
        android:textColor="@color/colorDGray"
        android:textSize="@dimen/txt_middle"/>
    <Button
        android:id="@+id/payment_card_item_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_middle"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:background="@drawable/border_round_yellow"
        android:textColor="@color/colorDGray"
        android:fontFamily="@font/sourcesanspro_bold"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="@dimen/txt_xxsmall"
        android:text="@string/btn_edit"/>
</RelativeLayout>